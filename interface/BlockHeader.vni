package mmx;

class BlockHeader {
	
	uint version;
	
	hash_t hash;
	hash_t prev;
	
	uint height;
	
	ulong nonce;
	
	ulong time_diff;
	ulong space_diff;
	
	uint128 weight;
	uint128 total_weight;
	
	ulong vdf_iters;
	hash_t vdf_output[2];
	
	ProofOfSpace* proof;
	
	Transaction* tx_base;
	
	uint tx_count;
	
	hash_t tx_hash;
	
	optional<bls_signature_t> farmer_sig;
	
	
	bool is_valid() const;
	
	hash_t calc_hash() const;
	
	hash_t get_full_hash() const;
	
	void validate() const;
	
	BlockHeader* get_header() const;
	
}
